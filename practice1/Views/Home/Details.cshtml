<body class="subpage">
    <div id="page-wrapper">

        <section id="content">
            <div class="container">
                <div class="row">
                    <div class="col-3 col-12-medium">

                        <!-- Sidebar -->
                        <section>
                            <header>
                                <h2>@Model.Name</h2>
                            </header>
                            <ul class="link-list">
                                <li>
                                    @if (@Model.Avatar != null)
                                    {
                                        <img style='width:60px; height:80px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Avatar))" />
                                    }
                                    <p style="margin-bottom: auto">Автор: @Model.Author</p>
                                    <p style="margin-bottom: auto">Жанр: @Model.Genre</p>
                                    <p style="margin-bottom: auto">Издательство: @Model.Publisher</p>
                                    <p style="margin-bottom: auto">Год: @Model.Year</p>
                                </li>
                                <li>
                                    <p style="margin-bottom: auto">Кол-во:@Model.Quantity</p>
                                    <p style="margin-bottom: auto">Полка: @Model.Rack</p>
                                    <p style="margin-bottom: auto">Цена: @Model.Price</p>
                                </li>
                                <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id">Изменить</a> |
                                <a asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Id">Удалить</a>
                            </ul>
                        </section>
                       

                    </div>
                    <div class="col-9 col-12-medium imp-medium">

