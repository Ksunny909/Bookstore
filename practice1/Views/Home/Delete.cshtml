@model practice1.Models.Book
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Автор</dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt>Стойка</dt>
        <dd>
            @Html.DisplayFor(model => model.Rack)
        </dd>

        <dt>Кол-во</dt>
        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>Жанр</dt>
        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>Издательство</dt>
        <dd>
            @Html.DisplayFor(model => model.Publisher)
        </dd>

        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
